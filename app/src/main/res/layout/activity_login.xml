<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leonardo.watermeter.ui.LoginActivity">
    <RelativeLayout
        android:id="@+id/login_r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/login_logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="智能手机抄表系统软件"
            android:textSize="35dp"/>
        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:onClick="loginApp"
            android:text="登录"
            android:textSize="25dp"
            android:layout_below="@+id/login_logo_text"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/text_IMEI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前设备串号为："
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_below="@id/login_btn"/>





    </RelativeLayout>
</RelativeLayout>
